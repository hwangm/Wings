body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF
#step3 select
  margin: 10px 10px 10px 10px
  width: 150px
#buttonContainer button 
  margin:auto 5px auto 0
  width:100%
#stepCounter
  margin:auto 5px auto 0
#navHeader div
  text-align: center
  color: white
  font-weight: bold
  font-size: 20px
#extraDetails
  color: white
.nested-group input:focus
  box-shadow: none
.nested-group div:first-child
  border-bottom-right-radius: 0
  border-top-right-radius: 0
  border-top-left-radius: 4px
  border-bottom-left-radius: 4px
.nested-group input 
  margin-left: -5px
  border: 0 solid white
  border-style: solid
  background-color: white
  box-shadow: inset 0 0 0 0 red
  padding: 10px 16px 10px 5px
.nested-group button  
  background-color: black
  color: white
  border-color: white
  padding: 21px 12px 21px 12px
  width: 175px
  margin-left: -20px
  font-size: 16px
  font-weight: bold
.nested-group .inline-button
  display: inline-block
  padding-top: 10px
  padding-bottom: 10px
  background-color: white
  border: 1px solid rgb(204, 204, 204)
  margin-bottom: 0
  border-left-color: white
  border-left-width: 0
  margin-left: -1px
  height: auto
.nested-group div
  display: inline-block
  background-color: white
  padding: 10px 15px 5px 15px
  border: 1px solid rgb(204, 204, 204)
.nested-group label
  display: block
  color: rgb(153, 153, 153)
.inline-toggle
  background-color: transparent
  color: white